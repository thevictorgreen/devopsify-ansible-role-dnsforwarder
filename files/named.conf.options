options {
            directory "/var/cache/bind";

            recursion yes;

            allow-query { any; };

            dnssec-enable yes;
            dnssec-validation yes;

            auth-nxdomain no;    # conform to RFC1035
            listen-on-v6 { any; };

            forwarders {
              8.8.8.8;
            };
            forward only;
};
